[worldserver]

########################################
# Dungeon Respawn configuration
########################################
#
#    DungeonRespawn.Enable
#        Description: Enables the Dungeon Respawn module.
#        Default:     0 - Disabled
#                     1 - Enabled
#

DungeonRespawn.Enable = 1

#
#    DungeonRespawn.RespawnHealthPct
#        Description: The amount of health in % to respawn with.
#        Range:       0.0 - 100.0
#        Default:     100.0
#

DungeonRespawn.RespawnHealthPct = 50.0


# Ativar ou desativar a remoção de auras e reinicialização de cooldowns em ressurreição
# 0 - Desativado, 1 - Ativado

DungeonRespawn.RemoveAurasAndCooldownsOnResurrect = 1
