#        Description: Character knows all flight paths (of both factions) after creation.
#        Default:     0 - (Disabled)
#                     1 - (Enabled)

AllFlightPaths = 1

#
#    InstantFlightPaths
#        Description: Flight paths will take players to their destination instantly instead
